<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceLargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">@dimen/corner_radius_large</item>
        <item name="cornerFamily">rounded</item>
        <item name="background">?android:colorBackground</item>
        <item name="backgroundTint">?android:colorBackground</item>
    </style>

    <style name="ShapeAppearanceMediumComponent" parent="">
        <item name="cornerSize">@dimen/corner_radius_medium</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceSmallComponent" parent="">
        <item name="cornerSize">@dimen/corner_radius_small</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceModal" parent="@style/ShapeAppearanceLargeComponent">
        <item name="cornerSizeTopRight">@dimen/corner_radius_modal</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_modal</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearanceBadge" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.SharpCorner" parent="">
        <item name="cornerSize">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Design.BottomSheetDialog.Input" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dialog_rounded</item>
    </style>
</resources>